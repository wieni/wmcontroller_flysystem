{
    "name": "wieni/wmcontroller_flysystem",
    "type": "drupal-module",
    "description": "A Flysystem cache storage for wieni/wmcontroller",
    "license": "MIT",
    "authors": [
        {
            "name": "Wieni",
            "email": "info@wieni.be"
        }
    ],
    "require": {
        "php": "^8.0",
        "drupal/core": "^9.1",
        "drupal/flysystem": "1.x-dev",
        "wieni/wmcontroller": "^1.0"
    },
    "require-dev": {
        "ergebnis/composer-normalize": "^2.0",
        "wieni/wmcodestyle": "^1.7"
    },
    "repositories": {
        "drupal-composer": {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "coding-standards": [
            "@composer normalize",
            "php-cs-fixer fix --config=.php_cs.php"
        ]
    }
}
